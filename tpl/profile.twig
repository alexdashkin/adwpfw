<div class="{{ prefix }}-field">

    <h3>{{ heading }}</h3>

    <table class="form-table">

        {% for field in fields %}
            <tr>
                <th>
                    <label for="{{ prefix }}-{{ field.slug }}">{{ field.name }}</label>
                </th>
                <td>
                    <input type="{{ field.type }}" name="{{ prefix }}[{{ field.slug }}]" id="{{ prefix }}-{{ field.slug }}" value="{{ field.value }}" class="regular-text">

                    {% if field.desc %}
                        <span class="description">{{ field.desc }}</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}

    </table>

</div>