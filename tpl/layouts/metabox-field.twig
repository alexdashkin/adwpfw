<div class="adwpfw-field">

    {% block label %}

        {% if field.label %}
            <div class="adwpfw-label">
                <label for="{{ prefix }}-{{ field.form }}-field-{{ field.id }}">{{ field.label }}</label>
            </div>
        {% endif %}

    {% endblock %}

    <div class="adwpfw-control">

        {% block control %}

            <input type="text" class="{{ field.class }}"
                   id="{{ prefix }}-{{ field.form }}-field-{{ field.id }}"
                   name="{{ prefix }}[{{ field.form }}][{{ field.id }}]"
                    {% if field.required %} required {% endif %}
                   value="{{ field.value }}">

        {% endblock %}

        {% block desc %}

            {% if field.desc %}
                <div class="adwpfw-desc">{{ field.desc }}</div>
            {% endif %}

        {% endblock %}

    </div>

</div>
