<div class="{{ prefix }}-field">

    {% block label %}

        <div class="{{ prefix }}-label">
            <label for="{{ prefix }}-{{ field.form }}-field-{{ field.id }}">{{ field.label }}</label>
        </div>

    {% endblock %}

    <div class="{{ prefix }}-control">

        {% block control %}

            <input type="text" class="{{ field.class }}"
                   id="{{ prefix }}-{{ field.form }}-field-{{ field.id }}"
                   name="{{ prefix }}[{{ field.form }}][{{ field.id }}]"
                   placeholder="{{ field.placeholder }}"
                   value="{{ field.value }}">

        {% endblock %}

        {% block desc %}

            {% if field.desc %}
                <div class="{{ prefix }}-desc">{{ field.desc }}</div>
            {% endif %}

        {% endblock %}

    </div>

</div>
