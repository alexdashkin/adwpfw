<div class="{{ prefix }}-field">

    {% block label %}

        <div class="{{ prefix }}-label">
            <label for="{{ prefix }}-{{ field.form }}-field-{{ field.id }}">{{ field.label }}</label>
        </div>

    {% endblock %}

    {% block desc %}

        <div class="{{ prefix }}-help-tip dashicons dashicons-editor-help adwpfw-tooltip"
             title="{{ field.desc }}"
            {% if field.desc %} style="visibility: visible" {% endif %}>
            {% if field.desc %}
                <span class="tooltiptext">{{ field.desc }}</span>
            {% endif %}
        </div>

    {% endblock %}

    <div class="{{ prefix }}-control">

        {% block control %}

            <input type="text" class="{{ field.class }}"
                   id="{{ prefix }}-{{ field.form }}-field-{{ field.id }}"
                   name="{{ prefix }}[{{ field.form }}][{{ field.id }}]"
                   placeholder="{{ field.placeholder }}"
                   value="{{ field.value }}">

        {% endblock %}

    </div>

</div>
