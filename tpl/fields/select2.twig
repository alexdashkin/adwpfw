{% extends 'field.twig' %}

{% block control %}

    <input type="hidden" name="{{ prefix }}[{{ field.id }}]" value="">

    <select class="adwpfw-select2"
            id="{{ prefix }}-field-{{ field.id }}"
            name="{{ prefix }}[{{ field.id }}]{% if field.multiple %}[]{% endif %}"
            {% if field.ajax_action %} data-ajax-action="{{ field.ajax_action }}" {% endif %}
            {% if field.multiple %} multiple {% endif %}>

        {% for option in field.options %}
            <option value="{{ option.value }}" {{ field.selected }}>
                {{ option.label }}
            </option>
        {% endfor %}

    </select>

{% endblock %}
