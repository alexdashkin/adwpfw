{% extends 'layouts/' ~ field.layout ~ '.twig' %}

{% block control %}

    <label>

        <input type="hidden" name="{{ prefix }}[{{ field.form }}][{{ field.name }}]" value="">

        <input type="checkbox"
               id="{{ prefix }}-{{ field.form }}-field-{{ field.name }}"
               name="{{ prefix }}[{{ field.form }}][{{ field.name }}]"
                {% if field.value %} checked {% endif %}>
        {{ field.label }}

    </label>

{% endblock %}
