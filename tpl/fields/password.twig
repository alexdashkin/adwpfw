{% extends 'layouts/' ~ field.layout ~ '.twig' %}

{% block control %}

    <input type="password" class="{{ field.class }}"
           id="{{ prefix }}-{{ field.form }}-field-{{ field.name }}"
           name="{{ prefix }}[{{ field.form }}][{{ field.name }}]"
            {% if field.required %} required {% endif %}
           value="{{ field.value }}">

{% endblock %}
